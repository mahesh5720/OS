#include<stdio.h>
int main()
{
    int n;
    printf("enter the no. of process : ");
    scanf("%d",&n);
    int p[n],pt[n],wt[n],pr[n],turnt[n],tot=0,totturn=0,i,j,temp1;
    float avg,avgturn;
    printf("enter the process names : ");
    for(i=0;i<n;i++)
        scanf("%d",&p[i]);
    printf("enter the process times : ");
    for(i=0;i<n;i++)
        scanf("%d",&pt[i]);
    printf("enter the priority : ");
    for(i=0;i<n;i++)
        scanf("%d",&pr[i]);
    for(i=0;i<n-1;i++)
        for(j=i+1;j<n;j++)
            if(pr[i]>pr[j])
            {
                temp1=pr[i];
                 pr[i]=pr[j];
                 pr[j]=temp1;
                 
                 temp1=pt[i];
                 pt[i]=pt[j];
                 pt[j]=temp1;
                
                 temp1=p[i];
                 p[i]=p[j];
                 p[j]=temp1;
            }
    wt[0]=0;
    for(i=1;i<n;i++)
    {
        wt[i]=wt[i-1]+pt[i-1];
        tot=tot+wt[i];
    }
    avg=(float)tot/n;
    for(i=0;i<n;i++)
    {
        turnt[i]=pt[i]+wt[i];
        totturn+=turnt[i];
    }
    avgturn=(float)totturn/n;
    printf("process name\tprocess time \tpriority\twaiting time\tturn arround time \n");
    for(i=0;i<n;i++)
        printf("%d\t\t%d\t\t%d\t\t%d\t\t%d\n",p[i],pt[i],pr[i],wt[i],turnt[i]);
    printf("total waiting time : %d \n",tot);
    printf("average waiting time : %f \n",avg);
    printf("total turn arorund time : %d \n",totturn);
    printf("average turn arorund time : %f \n",avgturn);
    return 0;
}
